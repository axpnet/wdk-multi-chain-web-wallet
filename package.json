{
  "name": "wdk-wallet",
  "version": "1.0.1",
  "description": "Multi-chain wallet professionale con supporto per Ethereum, Solana, Polygon, BSC, TON, Litecoin e altre blockchain",
  "type": "module",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:github": "BASE_PATH=/wdk-multi-chain-web-wallet/ vite build",
    "build:portable": "vite build",
    "build:electron": "vite build --base=./",
    "build:extension": "vite build --mode extension --outDir dist/extension && npx esbuild background-main.js --bundle --outfile=dist/extension/background.js --format=esm --target=esnext && cp content.js popup.html popup.js injected.js manifest.json dist/extension/ && mkdir -p dist/extension/icons && cp icon*.png dist/extension/icons/ 2>/dev/null || true",
    "preview": "vite preview",
    "lint": "eslint . --ext .js --max-warnings=0 || echo 'Lint warnings found but continuing...'",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "clean": "rimraf dist node_modules/.vite",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:install": "playwright install",
    "test:e2e:headed": "playwright test --headed",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:pack": "npm run build:electron && electron-builder --dir",
    "electron:build": "npm run build:electron && electron-builder",
    "electron:build:win": "npm run build:electron && electron-builder -w",
    "electron:build:mac": "npm run build:electron && electron-builder -m",
    "electron:build:linux": "npm run build:electron && electron-builder -l"
  },
  "dependencies": {
    "@tetherto/wdk": "^1.0.0-beta.3",
    "@tetherto/wdk-wallet-btc": "^1.0.0-beta.3",
    "@tetherto/wdk-wallet-evm": "^1.0.0-beta.3",
    "@tetherto/wdk-wallet-solana": "^1.0.0-beta.2",
    "@tetherto/wdk-wallet-ton": "^1.0.0-beta.3",
    "@ton/core": "^0.62.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.4.0",
    "@walletconnect/core": "^2.23.0",
    "@walletconnect/types": "^2.23.0",
    "@walletconnect/utils": "^2.23.0",
    "@walletconnect/web3wallet": "^1.16.1",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^7.0.0",
    "bootstrap": "^5.3.8",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "ecpair": "^3.0.0",
    "elliptic": "^6.6.1",
    "ethers": "^6.15.0",
    "feather-icons": "^4.29.2",
    "marked": "^17.0.1",
    "qrcode": "^1.5.4",
    "sodium-javascript": "^0.8.0",
    "tiny-secp256k1": "^2.2.4",
    "tronweb": "^6.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/ui": "^1.6.0",
    "concurrently": "^8.2.2",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.1",
    "happy-dom": "^20.0.11",
    "jsdom": "^19.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.7.3",
    "rimraf": "^5.0.10",
    "vite": "^5.4.21",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "wallet",
    "blockchain",
    "multi-chain",
    "ethereum",
    "solana",
    "polygon",
    "bsc",
    "ton",
    "litecoin",
    "bitcoin",
    "web3",
    "crypto",
    "wdk",
    "bip39",
    "seed-phrase"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wdk-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/wdk-wallet/issues"
  },
  "homepage": "https://github.com/yourusername/wdk-wallet#readme",
  "build": {
    "appId": "com.axpdev.wdkwallet",
    "productName": "WDK Wallet",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "portable"
      ],
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "electronUpdaterCompatibility": ">=2.16"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    }
  }
}
