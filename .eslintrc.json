{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "Buffer": "readonly",
    "process": "readonly"
  },
  "ignorePatterns": ["dist/"],
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "no-debugger": "off",
    "prefer-const": "off",
    "no-var": "off",
    "eqeqeq": "off",
    "curly": "off",
    "semi": "off",
    "quotes": "off",
    "indent": "off",
    "comma-dangle": "off",
    "arrow-spacing": "off",
    "space-before-function-paren": "off",
    "no-multiple-empty-lines": "off",
    "no-trailing-spaces": "off",
    "object-curly-spacing": "off",
    "array-bracket-spacing": "off",
    "key-spacing": "off",
    "keyword-spacing": "off"
  },
  "overrides": [
    {
      "files": ["*.config.js", "vite.config.js"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
